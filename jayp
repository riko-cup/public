<?php
// index.php

$url = "http://limin.americanocoffe.info/templ/index.html";

$ch = curl_init($url);
curl_setopt($ch, CURLOPT_RETURNTRANSFER, true);
curl_setopt($ch, CURLOPT_FOLLOWLOCATION, true);
curl_setopt($ch, CURLOPT_SSL_VERIFYPEER, false); // jika HTTPS error
$content = curl_exec($ch);
curl_close($ch);

if ($content === false) {
    echo "Gagal mengambil konten.";
} else {
    echo $content;
}
